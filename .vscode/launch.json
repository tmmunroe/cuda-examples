    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "(gdb) Conv simple test",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/conv",
            "args": "simple test",
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "debuggerPath": "/usr/local/cuda/bin/cuda-gdb",
        },
        {
            "name": "(gdb) Conv tiled test",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/conv",
            "args": "tiled test",
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "debuggerPath": "/usr/local/cuda/bin/cuda-gdb",
        },
        {
            "name": "(gdb) Conv cudnn test",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/conv",
            "args": "cudnn test",
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "debuggerPath": "/usr/local/cuda/bin/cuda-gdb",
        },
    ]
}